{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "process": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "jsx-quotes": [
      "warn",
      "prefer-single"
    ],
    "no-duplicate-imports": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    // "react/react-in-jsx-scope": "off", 
    "react/prop-types": "off"
  }
}